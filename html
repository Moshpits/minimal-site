<body>
    <div id="button">просмотр</div>
    <div id="quote">"Простота — это сложность, скрытая за очевидностью."</div>
    <div id="square"></div>

    <script>
        document.getElementById('button').addEventListener('click', function() {
            // Скрываем кнопку и показываем квадрат
            this.style.display = 'none';
            const square = document.getElementById('square');
            square.style.display = 'block';

            // Увеличиваем размер квадрата
            square.style.width = '200px';
            square.style.height = '200px';

            // Сдвигаем цитату вниз
            document.getElementById('quote').style.marginTop = '140px';
        });
    </script>
